@{
    Layout = null;
}
@model User

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Animated Login Form | CodingNepal</title>
    <link rel="stylesheet" href="~/LayoutLogin/login.css">
</head>
<body>
    <div class="centerDiv">
        <h1>Login</h1>
       @* <form method="post">*@
             @using (Html.BeginForm("Login", "Access", FormMethod.Post))
        {
            <div class="txt_field">
                @Html.TextBoxFor(x => x.Username, new { required = "required" })
                <span></span>
                <label>Username</label>
            </div>
            <div class="txt_field">
                @Html.PasswordFor(x => x.Password, new { required = "required" })
                <span></span>
                <label>Password</label>
            </div>
            <div class="pass">Forgot Password?</div>
            <input type="submit" value="Login">
            <div class="signup_link">
                Not a member? <a href="#">Signup</a>
            </div>
       
        }@*</form>*@
    </div>

</body>
</html>
